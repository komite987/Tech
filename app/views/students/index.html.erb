<h1 class="text-center title">Students Listing</h1>
<br>
  <div class="row row-cols-1 row-cols-md-2">
    <% @students.each do |student|%>
    <div class="col mb-4">
      <div class="card h-300">
        <div class="card-body">
          <h5 class="card-title"><%= link_to student.name, student_path(student), class:"index" %></h5>
          <p class="card-title"><%= student.email %></p>
          <p class="card-text">Course Enrollments: <% if student.courses.empty? %> None
            <% else %>
            <%= student.courses.count %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
