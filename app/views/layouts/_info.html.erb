<div class="row notification">
  <div class="col-10 offset-1">
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%="#{name}"%>' id="fadeout">
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
        <div><%= msg %></div>
        </div>
    <% end %>
  </div>
</div>
