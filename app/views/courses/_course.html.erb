<div class="col mb-4">
  <div class="card h-300">
    <div class="card-body">
      <h5 class="card-title"><%= course.code %>:
        <%= course.name %></h5>
      <p class="card-text"><%= course.description %></p>
      <div>
        <% if logged_in && !(current_student.courses.include?(course)) %>
          <%= link_to 'Enroll', course_enroll_path(course_id: course.id), method: :post, class: "card-link course-link"%>
        <% end %>
        <% if course.students.any? %>
          <span class="card-link course-link"> Student in Course:
            <%= course.students.count %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
